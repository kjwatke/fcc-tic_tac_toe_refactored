doctype html
html
  head
    meta(lang="en" charset="UTF-8")
    title TicTacToe__Refactored-FCC
    link(href="../css/style.css", rel="stylesheet")
    style.
      @import url('https://fonts.googleapis.com/css?family=Audiowide|Permanent+Marker');
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css", rel="stylesheet")
    script(src="https://code.getmdl.io/1.3.0/material.min.js")

  body
    h3.title TicTacToe-FCC Front End Project
    section.game-board.mdl-card-mdl-js-card.mdl-shadow--24dp
      canvas.canvas0.tile(height="100" width="100"
                          onclick="appInstance.draw(0)")
      canvas.canvas1.tile(height="100" width="100"
                          onclick="appInstance.draw(1)")
      canvas.canvas2.tile(height="100" width="100"
                          onclick="appInstance.draw(2)")
      br
      canvas.canvas3.tile(height="100" width="100"
                          onclick="appInstance.draw(3)")
      canvas.canvas4.tile(height="100" width="100"
                          onclick="appInstance.draw(4)")
      canvas.canvas5.tile(height="100" width="100"
                          onclick="appInstance.draw(5)")
      br
      canvas.canvas6.tile(height="100" width="100"
                          onclick="appInstance.draw(6)")
      canvas.canvas7.tile(height="100" width="100"
                          onclick="appInstance.draw(7)")
      canvas.canvas8.tile(height="100" width="100"
                          onclick="appInstance.draw(8)")
      br
    button.reload.btn.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--accent.reload.mdl-js-ripple-effect reset

      
    script(src="../js/app.js")
    